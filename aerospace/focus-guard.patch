@@ -1,4 +1,8 @@
+import Foundation
+
 @MainActor private var lastKnownNativeFocusedWindowId: UInt32? = nil
+@MainActor var lastCommandTime: Date? = nil
+@MainActor var lastCommandMonitorId: Int? = nil

 /// The data should flow (from nativeFocused to focused) and
 ///                      (from nativeFocused to lastKnownNativeFocusedWindowId)
@@ -8,6 +12,23 @@
         return
     }
     if nativeFocused?.windowId != lastKnownNativeFocusedWindowId {
+        // Suppress app-initiated focus changes shortly after an AeroSpace command:
+        // 1. To hidden-in-corner windows (Chrome makeKeyAndOrderFront on hidden windows)
+        // 2. To visible windows on a different monitor than the command targeted
+        //    (Chrome re-asserting focus across monitors)
+        if let lastCmd = lastCommandTime,
+           Date().timeIntervalSince(lastCmd) < 0.25 {
+            if let macWindow = nativeFocused as? MacWindow, macWindow.isHiddenInCorner {
+                lastKnownNativeFocusedWindowId = nativeFocused?.windowId
+                return
+            }
+            if let cmdMon = lastCommandMonitorId,
+               let windowMon = nativeFocused?.nodeWorkspace?.workspaceMonitor.monitorAppKitNsScreenScreensId,
+               windowMon != cmdMon {
+                lastKnownNativeFocusedWindowId = nativeFocused?.windowId
+                return
+            }
+        }
         _ = nativeFocused?.focusWindow()
         lastKnownNativeFocusedWindowId = nativeFocused?.windowId
     }
