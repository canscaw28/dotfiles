+
 @MainActor private var lastKnownNativeFocusedWindowId: UInt32? = nil
+@MainActor var lastCommandTime: Date? = nil

 /// The data should flow (from nativeFocused to focused) and
 ///                      (from nativeFocused to lastKnownNativeFocusedWindowId)
@@ -8,6 +11,15 @@
         return
     }
     if nativeFocused?.windowId != lastKnownNativeFocusedWindowId {
+        // Ignore focus changes to hidden-in-corner windows shortly after
+        // an AeroSpace command (workaround for Chrome makeKeyAndOrderFront)
+        if let macWindow = nativeFocused as? MacWindow,
+           macWindow.isHiddenInCorner,
+           let lastCmd = lastCommandTime,
+           Date().timeIntervalSince(lastCmd) < 0.5 {
+            lastKnownNativeFocusedWindowId = nativeFocused?.windowId
+            return
+        }
         _ = nativeFocused?.focusWindow()
         lastKnownNativeFocusedWindowId = nativeFocused?.windowId
     }
